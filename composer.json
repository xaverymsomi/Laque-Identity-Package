{
  "name": "vicent/laque-identity",
  "description": "Laque Identity \u2014 Tanzania-focused KYC utilities: MRZ parsing (TD1/TD3), NIDA client, TIN & phone validation, and scoring. Framework-agnostic, SOLID, PSR-compliant.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Vicent Msomi",
      "email": "msomivicent@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/simple-cache": "^3.0",
    "psr/log": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Laque\\Identity\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Laque\\Identity\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "php-cs-fixer fix --diff --dry-run",
    "fix": "php-cs-fixer fix",
    "test:coverage": "phpunit -c phpunit.coverage.xml.dist"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Laque\\Identity\\Adapters\\Laravel\\LaqueIdentityServiceProvider"
      ]
    }
  }
}